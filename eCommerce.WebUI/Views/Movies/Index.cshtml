@using eCommerce.Model

@{
    ViewBag.Title = "Index";
}

<h2>All Movies</h2>

<p>
    @Html.ActionLink("New Movie", "Create", "Movies", null, htmlAttributes: new  { @class="btn btn-primary",  @role="button"})
</p>
<table id="Movies" class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Membership Type</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document)
            .ready(function () {
                $("#Movies").DataTable({
                    ajax: {
                        url: "/api/movies",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name",
                            render: function(data, type, movie) {
                                return "<a href='/movies/edit/" + movie.movieId + "'>" + movie.name + "</a>";
                            }
                        },
                        {
                            data: "genreDto.name"
                        },
                        {
                            data: "movieId",
                            render: function(data) {
                                return "<button class='btn btn-link js-delete' data-movie-id=" +
                                    data +
                                    ">Delete</button>";
                            }
                        }
                    ]
                });

                $("#Movies").on("click", ".js-delete", function (){
                    var button = $(this);

                    bootbox.confirm("Are you sure you wish to delete this movie?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "api/movies/" + button.attr("data-movie-id"),
                                    method: "DELETE",
                                    success: function() {
                                        button.parents("tr").remove();
                                    }
                            });
                            }
                        });
                });
            });


    </script>
}
